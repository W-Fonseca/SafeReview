<Page x:Class="SafeReview.Page_Config"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SafeReview"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Config">

    <Viewbox Margin="14,18,18,18" VerticalAlignment="Top" HorizontalAlignment="Center">
        <Grid>
            <Label Content="Config Language ————————————————————————————————————————" HorizontalAlignment="Left" Margin="21,25,0,0" VerticalAlignment="Top" Foreground="White"/>
            <ComboBox x:Name="Selecao_Linguagem" HorizontalAlignment="Right" Margin="0,50,24,252" Width="186" SelectionChanged="Item_selecionado">
                <ComboBoxItem >English</ComboBoxItem>
                <ComboBoxItem >Portuguese (Brasil)</ComboBoxItem>
                <ComboBoxItem >Spanish</ComboBoxItem>
            </ComboBox>

            <Button Content="{DynamicResource ResourceKey=Btl_Save}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Press_Save" Width="60" Margin="0,0,24,117" Height="20" />
        </Grid>
    </Viewbox>
</Page>
